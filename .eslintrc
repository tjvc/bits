{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "env": {
    "node": true
  },
  "rules": {
    "@typescript-eslint/no-floating-promises": "error"
  },
  "ignorePatterns": ["dist", "jest.config.js"]
}
